{
  "permissions": {
    "allow": [
      "Bash(git worktree:*)",
      "Bash(git merge:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git diff:*)",
      "Bash(git checkout:*)",
      "Bash(uv lock:*)",
      "Bash(uv sync:*)",
      "Bash(uv run pytest:*)"
    ],
    "allowedCommands": [
      "uv",
      "git",
      "npm",
      "python",
      "pytest"
    ],
    "requireApprovalForWrite": false,
    "requireApprovalForBash": false
  },
  "environmentVariables": {
    "PYTHONUNBUFFERED": "1"
  }
}

[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    .eggs,
    *.egg,
    build,
    dist,
    chroma_db
max-complexity = 15
# Allow some functions to be more complex (document processing is inherently complex)
per-file-ignores =
    document_processor.py:C901
